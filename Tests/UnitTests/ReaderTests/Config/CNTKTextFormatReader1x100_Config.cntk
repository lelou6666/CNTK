RootDir = .
ModelDir = "models"
command = "1x100_Test"

precision = "double"

modelPath = "$ModelDir$/CNTKTextFormatReader1x100_Model.dnn"

# deviceId = -1 for CPU, >= 0 for GPU devices
deviceId = -1

outputNodeNames = "ScaledLogLikelihood"
traceLevel = 1

#######################################
#  CONFIG (1x100, Fixed LR)          #
#######################################

1x100_Test = [
    # Parameter values for the reader
    reader = [
        # reader to use
        readerType = "CNTKTextFormatReader"
        # Training file contains the same sequence (with a single sample) 
        # repeated 100 times. Also, it uses UTF-8 encoding and contains
        # BOM value.
        file = "$RootDir$/CNTKTextFormatReader1x100_Train.txt"

        randomize = "auto"
        
        #maxErrors = 0 -- default value
        traceLevel = 1
        
        chunkSizeInBytes = 10000 # ~ 3 full sequences (30 samples)
        numChunksToCache = 5

        input = [

             features = [
                alias = "F"
                dim = 100
                format = "dense"
            ]
            
            labels = [
                alias = "L"
                dim = 100
                format = "dense"
            ]
        ]
    ]
]
